# ============================================
# HERMES - Configuration environnement
# ============================================

# Répertoire de base du projet
BASE_DIR=${HOME}/HERMES

# Répertoire des archives et backups
ARCHIVES_DIR=${HOME}/HERMES/backups

# Timezone
TZ=Europe/Paris

# ============================================
# GRAFANA
# ============================================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=changeme_secure_password!

# UIDs/GIDs (laisser par défaut sauf besoin spécifique)
GRAFANA_UID=472
GRAFANA_GID=472

# ============================================
# PROMETHEUS
# ============================================
PROMETHEUS_RETENTION=15d
PROMETHEUS_UID=65534
PROMETHEUS_GID=65534

# ============================================
# LOKI
# ============================================
LOKI_UID=10001
LOKI_GID=10001

# ============================================
# INFLUXDB 2.x
# ============================================
INFLUXDB_INIT_MODE=setup
INFLUXDB_INIT_USERNAME=admin
INFLUXDB_INIT_PASSWORD=changeme_influxdb_password!
INFLUXDB_INIT_ORG=hermes
INFLUXDB_INIT_BUCKET=logs
INFLUXDB_INIT_RETENTION=30d
INFLUXDB_INIT_ADMIN_TOKEN=your_super_secret_token_here_change_me
INFLUXDB_CLI_CONFIG_NAME=hermes-config

# ============================================
# WAZUH - Plateforme de sécurité
# ============================================
WAZUH_INDEXER_PASSWORD=ChangeMeIndexer!
WAZUH_API_USER=wazuh-api
WAZUH_API_PASSWORD=ChangeMeWazuhApi!
WAZUH_DASHBOARD_USER=admin
